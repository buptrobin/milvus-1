# Milvus Configuration
MILVUS_HOST=172.28.9.45
MILVUS_PORT=19530
MILVUS_DATABASE=default
MILVUS_ALIAS=default
MILVUS_TIMEOUT=30

# Collection Configuration
METADATA_COLLECTION=Pampers_metadata
EVENT_COLLECTION=Pampers_Event_metadata
VECTOR_DIMENSION=1024

# Embedding Model Configuration
EMBEDDING_MODEL=BAAI/bge-m3
USE_FP16=true
BATCH_SIZE=128
MAX_LENGTH=512

# Search Configuration
SIMILARITY_THRESHOLD=0.65
SCORE_GAP_THRESHOLD=0.08
MAX_RESULTS=10
PROFILE_SEARCH_LIMIT=5
EVENT_SEARCH_LIMIT=5
EVENT_ATTR_SEARCH_LIMIT=10

# Volcano Engine LLM Configuration
# 是否启用火山引擎大模型进行信息抽?
VOLCANO_ENABLED=true

# 火山引擎 API Key (必填)
# 从火山引擎控制台获取: https://console.volcengine.com/ark
VOLCANO_API_KEY=7b9a3304-daa2-43fe-af5c-bbade3432252

# ========== 方式1: 使用公共模型 (推荐) ==========
# 使用火山引擎公共模型（豆包系列）
VOLCANO_USE_PUBLIC_MODEL=true

# 公共模型名称 (选择以下之一)
# 轻量版模?(成本低，速度?:
#   - doubao-lite-32k      # 轻量版，32K上下?
#   - doubao-lite-128k     # 轻量版，128K上下?
#   - doubao-1.5-lite-32k  # 1.5轻量版，32K上下?
#
# 专业版模?(性能好，准确度高):
#   - doubao-pro-32k       # 专业版，32K上下?
#   - doubao-pro-128k      # 专业版，128K上下?
#   - doubao-pro-256k      # 专业版，256K上下?
#   - doubao-1.5-pro-32k   # 1.5专业版，32K上下文，推荐
#
# 默认推荐: doubao-lite-32k (开发测?
# 生产推荐: doubao-pro-32k ?doubao-1.5-pro-32k
VOLCANO_MODEL=deepseek-v3-1-terminus

# ========== 方式2: 使用自定义端?(高级) ==========
# 如果您创建了专属的模型端点，可以使用此方?
# VOLCANO_USE_PUBLIC_MODEL=false
# VOLCANO_ENDPOINT_ID=ep-xxxxxx-xxxxx

# API Base URL (可选，公共模型会自动设?
# VOLCANO_BASE_URL=https://ark.cn-beijing.volces.com/api/v3

# 系统提示?(可选，留空使用默认?
# 定义模型的角色和行为
# 示例: 你是一个专业的信息抽取助手，擅长从自然语言中提取结构化信息?
VOLCANO_SYSTEM_PROMPT=

# 信息抽取提示词模?(可选，留空使用默认?
# 使用 {query} 作为用户查询的占位符
# 提示：可以根据您的业务需求自定义提示?
# 示例?
# VOLCANO_EXTRACTION_PROMPT=请从以下查询中抽取关键信息：\n查询: {query}\n\n请识别并返回JSON格式的结构化信息...
VOLCANO_EXTRACTION_PROMPT=

# 模型参数配置
VOLCANO_MAX_TOKENS=1024
VOLCANO_TEMPERATURE=0.1
VOLCANO_TIMEOUT=30

# Agent Configuration
LOG_LEVEL=INFO
ENABLE_CACHE=true
CACHE_TTL=3600
